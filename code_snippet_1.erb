<!-- This snippet was to add a tooltip button that would alert inspectors that we can only accept orders from states in which we are licensed. -->

<div class="form-group row">
  <div class="col-sm-6">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control", placeholder: "City" %>
  </div>
  <div class="col-sm-3">
    <%= f.label :state %> <a data-toggle="tooltip" data-placement="top" title="Only states in which we are currently licensed will be available">
    <i class="fa fa-info-circle" aria-hidden="true"></i> </a>
  
    <%= f.select :state, options_for_select(us_states, selected: order.state, disabled: non_licensed_states), { include_blank: "Select State" }, class: "form-control" %>
  </div>
  <div class="col-sm-3">
    <%= f.label :zip %>
    <%= f.text_field :zip, class: "form-control", placeholder: "Zip" %>
  </div>
</div>


$(function() {
    $(document).on("click", "[data-behavior=submit-on-click]", function() {
        $form = $(this).closest('form')
        $form.submit()
    })
    $('[data-toggle="tooltip"]').tooltip() 
})